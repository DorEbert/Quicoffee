<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificOrderActivity">
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SpecificOrderActivity"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@color/textViewColor">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@mipmap/logowithmap_foreground">
        </ImageView>
    </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/textViewTitleSpecificOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/textViewShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/textViewOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="415dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/payBySelfieButton"
            android:visibility="gone"
            android:layout_width="157dp"
            android:layout_height="58dp"></Button>
        <Button
            android:id="@+id/confirmTheOrderButton"
            android:visibility="gone"
            android:layout_width="157dp"
            android:layout_height="58dp"></Button>
        <Button
            android:id="@+id/deleteOrderButton"
            android:visibility="visible"
            android:layout_width="157dp"
            android:layout_height="58dp"></Button>
        <TextView
            android:id="@+id/textViewTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:padding="2dp"
            android:layout_height="100dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>